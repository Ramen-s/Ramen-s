<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="bg-light text-dark p-3 my-4 d-inline-block">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
      </h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_with model: [:admin, @customer], local: true do |f| %>
        
        <div class="form-group row">
          <label class="col-md-2 col-form-label">会員ID</label>
          <div class="col-md-10 d-flex align-items-center">
            <%= @customer.id %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-2 col-form-label">氏名</label>
          <div class="col-md-3">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-2 col-form-label">フリガナ</label>
          <div class="col-md-3">
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-2 col-form-label">郵便番号</label>
          <div class="col-md-3">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-2 col-form-label">住所</label>
          <div class="col-md-7">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-2 col-form-label">電話番号</label>
          <div class="col-md-3">
            <%= f.text_field :telephone_number, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-2 col-form-label">メールアドレス</label>
          <div class="col-md-3">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-md-2 col-form-label">会員ステータス</label>
          <div class="col-md-10 d-flex align-items-center">
            <div class="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :is_active, true, class: "custom-control-input", id: "status_active" %>
              <label class="custom-control-label" for="status_active">有効</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :is_active, false, class: "custom-control-input", id: "status_invalid" %>
              <label class="custom-control-label" for="status_invalid">退会</label>
            </div>
          </div>
        </div>

        <div class="form-group row mt-4">
          <div class="col-md-2"></div>
          <div class="col-md-3">
            <%= f.submit "変更を保存", class: "btn btn-success btn-block" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>