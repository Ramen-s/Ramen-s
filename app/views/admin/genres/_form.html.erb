<%= form_with model: [:admin, genre], local: true do |f| %>
  <% if genre.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.label :name, "ジャンル名", class: "col-form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名を入力" %>
  </div>

  <div class="text-center mt-3">
    <%= f.submit (local_assigns[:submit_label] || "保存"), class: "btn btn-success px-5" %>
  </div>
<% end %>
