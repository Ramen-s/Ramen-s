<div class="container my-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="mb-4 bg-light text-center py-2">ジャンル一覧・追加</h2>

      <div class="mb-4">
        <%= render "form", genre: @genre, submit_label: "新規登録" %>
      </div>

      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th style="width: 20%;">ジャンルID</th>
            <th>ジャンル名</th>
            <th style="width: 20%;"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.id %></td>
              <td><%= genre.name %></td>
              <td class="text-center">
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm px-4" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
