<%= form_with model: [:admin, item], local: true do |f| %>
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="admin-item-form__row">
    <div class="admin-item-form__label">
      <%= f.label :image, "商品画像" %>
    </div>
    <div class="admin-item-form__field">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="admin-item-form__row">
    <div class="admin-item-form__label">
      <%= f.label :name, "商品名" %>
    </div>
    <div class="admin-item-form__field">
      <%= f.text_field :name, class: "admin-item-form__input", placeholder: "商品名を入力" %>
    </div>
  </div>

  <div class="admin-item-form__row">
    <div class="admin-item-form__label">
      <%= f.label :introduction, "商品説明" %>
    </div>
    <div class="admin-item-form__field">
      <%= f.text_area :introduction, class: "admin-item-form__textarea", rows: 6, placeholder: "説明文を入力" %>
    </div>
  </div>

  <div class="admin-item-form__row">
    <div class="admin-item-form__label">
      <%= f.label :genre_id, "ジャンル" %>
    </div>
    <div class="admin-item-form__field">
      <%= f.collection_select :genre_id, Genre.all, :id, :name,
            { include_blank: "-- 選択してください --" },
            { class: "admin-item-form__select" } %>
    </div>
  </div>

  <div class="admin-item-form__row">
    <div class="admin-item-form__label">
      <%= f.label :price, "税抜価格" %>
    </div>
    <div class="admin-item-form__field">
      <div class="admin-item-form__price">
        <%= f.number_field :price, class: "admin-item-form__input admin-item-form__input--price", placeholder: "1000" %>
        <span class="admin-item-form__yen">円</span>
      </div>
    </div>
  </div>

  <div class="admin-item-form__row">
    <div class="admin-item-form__label">
      販売ステータス
    </div>
    <div class="admin-item-form__field">
      <label class="admin-item-form__radio">
        <%= f.radio_button :is_active, true %>
        <span class="admin-item-form__radio-text is-active">販売中</span>
      </label>

      <label class="admin-item-form__radio">
        <%= f.radio_button :is_active, false %>
        <span class="admin-item-form__radio-text is-inactive">販売停止中</span>
      </label>
    </div>
  </div>

  <div class="admin-item-form__actions">
    <%= f.submit item.new_record? ? "新規登録" : "変更を保存", class: "btn btn-success admin-item-form__submit" %>
  </div>
<% end %>
