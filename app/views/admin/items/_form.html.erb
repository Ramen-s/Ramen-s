<%= form_with model: [:admin, item] do |f| %>
  <% if item.errors.any? %>
    <ul>
      <% item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :genre_id, "ジャンルID" %><br>
    <%= f.number_field :genre_id %>
  </div>

  <div>
    <%= f.label :name, "商品名" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :introduction, "説明" %><br>
    <%= f.text_area :introduction %>
  </div>

  <div>
    <%= f.label :price, "価格" %><br>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.label :is_active, "販売中？" %><br>
    <%= f.check_box :is_active %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
