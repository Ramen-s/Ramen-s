<div style="max-width:900px; margin:0 auto; padding:24px 16px;">
  <div style="display:flex; align-items:center; justify-content:space-between; margin-bottom:16px;">
    <h1 style="margin:0; font-size:28px;">商品一覧</h1>

    <!-- ＋（新規登録） -->
    <%= link_to new_admin_item_path,
                style: "display:inline-flex; align-items:center; justify-content:center; width:38px; height:38px; border:1px solid #999; border-radius:50%; text-decoration:none; color:#000; font-size:22px;",
                title: "商品新規登録" do %>
      ＋
    <% end %>
  </div>

  <table style="width:100%; border-collapse:collapse;">
    <thead>
      <tr style="border-bottom:1px solid #ddd;">
        <th style="text-align:left; padding:10px 8px;">商品ID</th>
        <th style="text-align:left; padding:10px 8px;">商品名</th>
        <th style="text-align:left; padding:10px 8px;">税抜価格</th>
        <th style="text-align:left; padding:10px 8px;">ジャンル</th>
        <th style="text-align:left; padding:10px 8px;">ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr style="border-bottom:1px solid #eee;">
          <td style="padding:10px 8px;"><%= item.id %></td>

          <td style="padding:10px 8px;">
            <%= link_to item.name, admin_item_path(item), class: "admin-item-name-link" %>
          </td>

          <td style="padding:10px 8px;">¥<%= item.price %></td>

          <td style="padding:10px 8px;"><%= item.genre&.name %></td>

          <td style="padding:10px 8px; font-weight:600;">
            <% if item.is_active %>
              <span style="color:#0a8a0a;">販売中</span>
            <% else %>
              <span style="color:#777;">販売停止中</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- ページネーション（/items と同じ：1 2 Next Last） -->
  <div style="margin-top:22px; text-align:center;">
    <% page = @items.current_page %>
    <% total_pages = @items.total_pages %>

    <% if total_pages > 1 %>
      <%# First / Prev %>
      <% if page > 1 %>
        <%= link_to "First", admin_items_path(page: 1), style: "margin:0 6px;" %>
        <%= link_to "Prev",  admin_items_path(page: page - 1), style: "margin:0 6px;" %>
      <% end %>

      <%# number links（最大5個だけ表示：現在の周辺） %>
      <% start_page = [page - 2, 1].max %>
      <% end_page   = [start_page + 4, total_pages].min %>
      <% start_page = [end_page - 4, 1].max %>

      <% (start_page..end_page).each do |p| %>
        <% if p == page %>
          <span style="margin:0 6px; font-weight:700;"><%= p %></span>
        <% else %>
          <%= link_to p, admin_items_path(page: p), style: "margin:0 6px;" %>
        <% end %>
      <% end %>

      <%# Next / Last %>
      <% if page < total_pages %>
        <%= link_to 'Next>',  admin_items_path(page: page + 1), style: 'margin:0 6px;' %>
        <%= link_to 'Last>>', admin_items_path(page: total_pages), style: 'margin:0 6px;' %>
      <% end %>
    <% end %>
  </div>
</div>