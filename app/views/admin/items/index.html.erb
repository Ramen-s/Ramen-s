<h1>商品一覧（管理者）</h1>

<p><%= link_to "新規登録", new_admin_item_path %></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>商品名</th>
      <th>価格</th>
      <th>販売</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.is_active ? "販売中" : "停止" %></td>
        <td><%= link_to "編集", edit_admin_item_path(item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
