<header class="nc-header">
  <div class="nc-header__inner">
    <%= link_to "LOGO", (defined?(root_path) ? root_path : "/"), class: "nc-logo" %>

    <div class="nc-header__right">
      <nav class="nc-nav">
        <%= link_to "About", (defined?(about_path) ? about_path : "/about"), class: "nc-btn" %>

        <%# 管理側ログイン（deviseのadmins） %>
        <%= link_to "ログイン", new_admin_session_path, class: "nc-btn" %>
      </nav>

      <div class="nc-search">
        <input class="nc-search__input" type="text" placeholder="Search" />
        <button type="button" class="nc-search__icon" aria-label="Search">
          <svg width="18" height="18" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M10 18a8 8 0 1 1 0-16 8 8 0 0 1 0 16Zm11 3-6-6"
                  fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>
