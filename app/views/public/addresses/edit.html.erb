<div class="container px-5 px-sm-0">
  <!-- タイトル -->
  <div class="row my-4">
    <div class="col-md-12">
      <h4 class="bg-light text-dark p-3 d-inline-block">配送先編集</h4>
    </div>
  </div>

  <!-- 編集フォーム -->
  <%= form_with model: @address, url: address_path(@address), method: :patch do |f| %>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-md-3 col-form-label" %>
      <div class="col-md-3">
        <%= f.text_field :postal_code, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-md-3 col-form-label" %>
      <div class="col-md-7">
        <%= f.text_field :address, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :name, "宛名", class: "col-md-3 col-form-label" %>
      <div class="col-md-3">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-3 text-right">
        <%= f.submit "変更内容を保存", class: "btn btn-success px-4" %>
      </div>
    </div>
  <% end %>
</div>