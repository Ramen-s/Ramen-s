<div class="container my-4">
  <div class="customer-show">

    <h2 class="mb-4">登録情報編集</h2>

    <%= form_with model: @customer, url: customers_information_path, method: :patch, local: true do |f| %>

      <table class="table table-bordered customer-show-table">
        <tbody>

          <tr>
            <th class="bg-light">氏名</th>
            <td class="d-flex gap-2">
              <%= f.text_field :last_name, class: "form-control", placeholder: "姓" %>
              <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
            </td>
          </tr>

          <tr>
            <th class="bg-light">カナ</th>
            <td>
              <%= f.text_field :kana, class: "form-control", placeholder: "カナを入力" %>
            </td>
          </tr>

          <tr>
            <th class="bg-light">郵便番号</th>
            <td>
              <%= f.text_field :postal_code, class: "form-control", placeholder: "0000000" %>
            </td>
          </tr>

          <tr>
            <th class="bg-light">住所</th>
            <td>
              <%= f.text_field :address, class: "form-control", placeholder: "住所を入力" %>
            </td>
          </tr>

          <tr>
            <th class="bg-light">電話番号</th>
            <td>
              <%= f.text_field :telephone_number, class: "form-control", placeholder: "090xxxxxxxx" %>
            </td>
          </tr>

          <tr>
            <th class="bg-light">メールアドレス</th>
            <td>
              <%= f.email_field :email, class: "form-control", placeholder: "example@email.com" %>
            </td>
          </tr>

        </tbody>
      </table>

<div class="mt-4 customer-edit-actions">
  <%= f.submit "編集内容を保存", class: "btn btn-primary px-4" %>
  <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger px-4" %>
</div>

    <% end %>

  </div>
</div>