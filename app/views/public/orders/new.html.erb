<div class="container my-5">
  <h2 class="mb-5 text-center font-weight-bold">注文情報入力</h2>

  <%= form_with model: @order, url: confirm_orders_path, method: :post, local: true do |f| %>

    <h4 class="font-weight-bold">支払方法</h4>
    <div class="ml-4 mb-5">
      <div class="form-check mb-2">
        <%= f.radio_button :payment_method, "credit_card", checked: true, class: "form-check-input" %>
        <%= f.label :payment_method_credit_card, "クレジットカード", class: "form-check-label" %>
      </div>
      <div class="form-check">
        <%= f.radio_button :payment_method, "transfer", class: "form-check-input" %>
        <%= f.label :payment_method_transfer, "銀行振込", class: "form-check-label" %>
      </div>
    </div>

    <h4 class="font-weight-bold">お届け先</h4>
    <div class="ml-4 mb-5">
      
      <div class="form-check mb-4">
        <%= radio_button_tag 'order[select_address]', '0', true, class: "form-check-input" %>
        <%= label_tag 'order_select_address_0', "ご自身の住所", class: "form-check-label font-weight-bold" %>
        <div class="ml-3 mt-1">
          〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
          <%= current_customer.last_name %> <%= current_customer.first_name %>
        </div>
      </div>

      <div class="form-check mb-4">
        <%= radio_button_tag 'order[select_address]', '1', false, class: "form-check-input" %>
        <%= label_tag 'order_select_address_1', "登録済住所から選択", class: "form-check-label font-weight-bold" %>
        <div class="ml-3 mt-2">
          <%= select_tag 'order[address_id]', options_from_collection_for_select(current_customer.addresses, :id, :address), include_blank: "選択してください", class: "form-control w-75" %>
        </div>
      </div>

      <div class="form-check mb-4">
        <%= radio_button_tag 'order[select_address]', '2', false, class: "form-check-input" %>
        <%= label_tag 'order_select_address_2', "新しいお届け先", class: "form-check-label font-weight-bold" %>
        
        <div class="ml-3 mt-2">
          <div class="form-group row">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-md-3 col-form-label" %>
            <div class="col-md-4">
              <%= f.text_field :postal_code, class: "form-control", placeholder: "0000000" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :address, "住所", class: "col-md-3 col-form-label" %>
            <div class="col-md-8">
              <%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :name, "宛名", class: "col-md-3 col-form-label" %>
            <div class="col-md-4">
              <%= f.text_field :name, class: "form-control", placeholder: "令和道子" %>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="text-center mt-5">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary btn-lg px-5 font-weight-bold shadow-sm" %>
    </div>

  <% end %>
</div>